<% provide(:title, "児童情報変更") %>
<h1>児童情報変更</h1>

<div class="row">
  <% if request.url.include?('for_kid') %>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@facility, @kid] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>


      <%= f.label :introduction %>
      <%= f.text_area :introduction, class: 'form_control' %>

      <%= hidden_field_tag :for_kid, " " %>
      <%= f.submit "保存する", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% end %>
</div>
