<% provide(:title, "児童情報変更") %>
<h1>児童情報変更</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@facility, @kid] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form_control' %>

      <%= f.label :school %>
      <%= f.text_field :school, class: 'form_control' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form_control' %>

      <%= f.label :introduction %>
      <%= f.text_area :introduction, class: 'form_control' %>


      <%= f.submit "保存する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
