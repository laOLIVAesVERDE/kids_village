<% provide(:title, @kid.name) %>



<div class="row">
  <% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
  <% end %>

  <form class="back_icon" method="get" action="/facilities/<%= params[:facility_id] %>">
    <%= image_submit_tag("back_icon.png")%>
    <input type="hidden" name="for_kid">
  </form>

  <% if request.url.include?('for_kid') %>
  <div class="kids_info_wrapper">
    <h2><%= @kid.name %></h2>
    <span class="badge badge-pill badge-primary">
      <%= @kid.school %>
    </span>
    <pre><%= @kid.introduction %></pre>
  </div>

  <div class="action_wrapper">
    <div class="mail_button_wrapper">
      <h4>連絡する</h4>
      <hr>
      <%= form_tag(facility_kid_back_from_schools_path(@facility, @kid), method: :post, class: "col-xs-4 col-sm-3 left") do %>
        <%= hidden_field_tag :for_kid, " " %>
        <%= label_tag "学校から戻りました！" %>
        <br>
        <%= image_submit_tag "school.png" %>
      <% end %>

      <%= form_tag(facility_kid_finish_homeworks_path(@facility, @kid), method: :post, class: "col-xs-4 col-sm-3 right") do %>
        <%= hidden_field_tag :for_kid, " " %>
        <%= label_tag "宿題が終わりました！" %>
        <br>
        <%= image_submit_tag "homework.png" %>
      <% end %>
    </div>
    <br>

    <div class="introduction_button_wrapper">
      <h4>自分のこと</h4>
      <hr>
      <%= form_tag(edit_facility_kid_path(@facility, @kid), method: :get, class: "col-xs-4 col-sm-3 left") do %>
        <%= hidden_field_tag :for_kid, " " %>
        <%= label_tag "自己紹介を変えたい！" %>
        <br>
        <%= image_submit_tag "introduction.png" %>
      <% end %>

      <%= form_tag(edit_facility_kid_path(@facility, @kid), method: :get, class: "col-xs-4 col-sm-3 right") do %>
        <%= hidden_field_tag :for_kid, " " %>
        <%= label_tag "写真を変えたい！" %>
        <br>
        <%= image_submit_tag "photo.png" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
