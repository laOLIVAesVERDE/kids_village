<% provide(:title, '施設を追加する') %>
<h1>施設追加</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@facility, url: facilities_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form_control' %>

      <%= f.submit "施設を追加する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
