<% provide(:title, "みんなの日記") %>
<div class="row">
  <form class="back_icon" method="get" action="/facilities/<%= params[:facility_id] %>/posts">
    <%= image_submit_tag("back_icon.png")%>
    <input type="hidden" name="for_kid">
  </form>

  <div class="col-md-6 col-md-offset-3">
  <table class="table table-striped">
    <tbody>
      <tr>
        <th scope="row">タイトル</th>
        <td>
          <%= @post.title %>
        </td>
      </tr>
      <tr>
        <th scope="row">内容</th>
        <td><pre><%= @post.content %></pre></td>
      </tr>
    </tbody>
  </table>
  </div>
</div>
