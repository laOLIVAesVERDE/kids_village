<% provide(:title, "日記一覧") %>

<div class="row post_index_for_kid">

  <form class="back_icon" method="get" action="/facilities/<%= params[:facility_id] %>">
    <%= image_submit_tag("back_icon.png")%>
    <input type="hidden" name="for_kid">
  </form>

  <table class="table">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for post in @posts %>
      <tr class="table-info" id="post-<%= post.id %>">
        <td class="post_name">
          <%= post.title %>
        </td>
        <td>
          <%= post.content[0..20] %>...
        </td>

        <td>
          <form method="get" action="/facilities/<%= @facility.id %>/posts/<%= post.id%>">
            <input class="btn btn-primary" type="submit" value="くわしく見る" />
            <input type="hidden" name="for_kid">
          </form>
        </td>
      </tr>
      <% end %>
      <%= paginate @posts, param_name: 'pagination_posts' %>
    </tbody>
  </table>

  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
  </div>

</div>
