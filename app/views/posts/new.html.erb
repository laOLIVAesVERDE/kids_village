<% provide(:title, '日記作成') %>
<h1>日記作成</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post, url: facility_posts_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form_control' %>

      <%= f.label :content %>
      <p>※一文が長くなりすぎないように記入してください。(目安：20文字)</p>
      <%= f.text_area :content, class: 'form_control' %>


      <%= f.submit "日記を作成する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
